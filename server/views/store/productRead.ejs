<%- include('../header') %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12"></div>
      <div class="table-responsive">
        <table id="tasksList" class="table table-striped  text-center my-3">
          <thread>
            <tr class="table-dark align-middle">
              <th class="table-light"><a class="nav-link" href="/task/create"> <i class="fas fa-plus me-1"></i> </a>
              </th>
              <th>ID</th>
              <th>Descricao</th>
              <th>Situação Atual</th>
              <th>Data de Abertura</th>
              <th>Data de Conclusão</th>
              <th> </th>
            </tr>
            <tbody>
              <% if ( tasks != '' ) { tasks.forEach((row, index)=> { %>
                <tr class="align-middle">
                  <td>

                  </td>
                  <td>
                    <%= row.id %>
                  </td>
                  <td>
                    <%= row.descricao %>
                  </td>
                  <td>
                    <%= row.situacao_atual %>
                  </td>
                  <td>
                    <%= row.data_de_abertura.toLocaleDateString('pt-br') %>
                  </td>
                  <td>
                    <% if (row.data_de_conclusao) { %>
                      <%= row.data_de_conclusao.toLocaleDateString('pt-br') %>
                  <% } else { %>
                      Em Andamento....
                  <% } %></td>
                  <td>
                    <a href="task/update/<%= row.id %>" class="text-dark">
                      <i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="task/delete/<%= row.id %>" class="text-dark">
                      <i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                  </td>
                </tr>
                <% }) } %>
            </tbody>
          </thread>
        </table>
        <% if ( tasks=='' ) { %>
          <h1 class="text-center text-secondary mt-5">
            Nenhuma tarefa encontrada! :(
          </h1>
          <% } %>
      </div>
    </div>
  </div>

<%- include('../footer') %>